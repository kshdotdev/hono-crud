{
  "name": "hono-crud",
  "version": "0.4.4",
  "description": "CRUD generator for Hono with Zod validation and OpenAPI generation",
  "author": "Kauan Guesser <contato@kauan.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kshdotdev/hono-crud.git"
  },
  "homepage": "https://github.com/kshdotdev/hono-crud#readme",
  "bugs": {
    "url": "https://github.com/kshdotdev/hono-crud/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters/memory": {
      "types": "./dist/adapters/memory/index.d.ts",
      "import": "./dist/adapters/memory/index.js"
    },
    "./adapters/drizzle": {
      "types": "./dist/adapters/drizzle/index.d.ts",
      "import": "./dist/adapters/drizzle/index.js"
    },
    "./adapters/prisma": {
      "types": "./dist/adapters/prisma/index.d.ts",
      "import": "./dist/adapters/prisma/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "import": "./dist/auth/index.js"
    },
    "./cache": {
      "types": "./dist/cache/index.d.ts",
      "import": "./dist/cache/index.js"
    },
    "./rate-limit": {
      "types": "./dist/rate-limit/index.d.ts",
      "import": "./dist/rate-limit/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js"
    },
    "./ui": {
      "types": "./dist/ui.d.ts",
      "import": "./dist/ui.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch examples/memory/basic-crud.ts",
    "dev:drizzle": "tsx watch examples/drizzle/comprehensive.ts",
    "dev:prisma": "tsx watch examples/prisma/comprehensive.ts",
    "dev:memory": "tsx watch examples/memory/comprehensive.ts",
    "prisma:generate": "prisma generate --schema=examples/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=examples/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=examples/prisma/schema.prisma",
    "db:up": "cd examples && docker compose up -d",
    "db:down": "cd examples && docker compose down",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "tsup",
    "prepublishOnly": "pnpm run typecheck && pnpm run test run"
  },
  "keywords": [
    "hono",
    "crud",
    "rest-api",
    "openapi",
    "swagger",
    "typescript",
    "zod",
    "prisma",
    "drizzle",
    "cloudflare-workers"
  ],
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "@scalar/hono-api-reference": "^0.9.19",
    "fastest-levenshtein": "^1.0.16",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@libsql/client": "^0.15.4",
    "@prisma/client": "^7.2.0",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.16.0",
    "@types/pluralize": "^0.0.33",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.4",
    "pg": "^8.17.2",
    "prisma": "^7.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "@prisma/adapter-pg": ">=5.0.0",
    "@prisma/client": ">=5.0.0",
    "drizzle-orm": ">=0.30.0",
    "drizzle-zod": ">=0.8.0",
    "hono": ">=4.0.0",
    "zod": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/adapter-pg": {
      "optional": true
    },
    "@prisma/client": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    },
    "drizzle-zod": {
      "optional": true
    }
  }
}
